<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background4"
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="900dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="1000dp"
        android:background="#30050505"
        android:backgroundTint="@color/light_gray">


        <ImageView
            android:layout_width="130dp"
            android:layout_height="100dp"
            android:layout_marginTop="-10dp"
            android:padding="0dp"
            android:src="@drawable/logo99" />


        <ImageView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="25dp"
            android:padding="0dp"
            android:src="@drawable/ic_baseline_circle_notifications_24" />

    </LinearLayout>

    <TextView
        android:id="@+id/cuponsdisponiveis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:text="CUPONS DISPONÍVEIS!"
        android:textColor="@color/white"
        android:fontFamily="@font/open_sans_condensed_bold"
        android:textSize="30dp"
        />


    <ImageView
        android:layout_width="40dp"
        android:layout_height="375dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_baseline_card_giftcard_24" />

    <TextView
        android:id="@+id/cuponsexclusivos"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@id/cuponsdisponiveis"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="-7dp"
        android:fontFamily="@font/open_sans_condensed_bold"
        android:gravity="left"
        android:padding="-21dp"
        android:text="Cupons Exclusivos"
        android:textColor="@color/white"
        android:textSize="27dp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="190dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginVertical="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/straydesconto"
                android:layout_width="260dp"
                android:layout_height="290dp"
                android:layout_below="@id/cuponsexclusivos"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="-18dp"
                android:padding="9dp"
                android:src="@drawable/straydesconto" />

            <ImageView
                android:id="@+id/arkdesconto"
                android:layout_width="235dp"
                android:layout_height="290dp"
                android:layout_below="@id/cuponsexclusivos"
                android:layout_marginLeft="-15dp"
                android:layout_marginTop="-18dp"
                android:padding="24dp"
                android:src="@drawable/ark" />

            <ImageView
                android:id="@+id/b4bdesconto"
                android:layout_width="240dp"
                android:layout_height="290dp"
                android:layout_below="@id/cuponsexclusivos"
                android:layout_marginLeft="-28dp"
                android:layout_marginTop="-18dp"
                android:padding="23dp"
                android:src="@drawable/b4b" />

            <ImageView
                android:id="@+id/farcrydesconto"
                android:layout_width="240dp"
                android:layout_height="290dp"
                android:layout_below="@id/cuponsexclusivos"
                android:layout_marginLeft="-27dp"
                android:layout_marginTop="-18dp"
                android:padding="24dp"
                android:src="@drawable/farcry" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Stray (PC)"
                android:layout_below="@id/straydesconto"/>



        </LinearLayout>

    </HorizontalScrollView>

</RelativeLayout>